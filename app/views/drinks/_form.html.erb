<%= render "layouts/errors", :object => @drink %>

<%= form_for @drink, remote: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :fruit %>
  <%= f.text_field :fruit %>
  <%= f.label :origin %>
  <%= f.text_field :origin %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :cost %>
  <%= f.text_field :cost %>
  <%= f.submit %>
<% end %>
<hr>
